BoxLayout:
    orientation: 'vertical'
    Label:
        id: trip_location
        font_size: 40
        text: "Current Trip location:"
        color: (1, 1, 0, 1)

    BoxLayout:
        orientation: 'horizontal'
        GridLayout:
            #size: root.size
            cols: 2
            rows: 2

            Spinner:
                id: country_selection
                text: app.current_country
                # values takes a list - could be a literal here or variable in app
                values: app.country_codes
                # on_text is the event (not on_release) when the text updates (spinner option is selected)
                # note that on_text runs even when the text is set for the very first time
                on_text: app.change_country(self.text)

            TextInput:
                id: input_amount
                values:
                text: '0'
                font_size: 40

            Label:
                text: 'Australia'
                id: home_country
            TextInput:
                id: home_amount
                text: '0'
                font_size: 40

    Label:
        id: today_date
        font_size: 30
        text: "Today's Date:"
        color: (1, 1, 0, 1)

    BoxLayout:
        orientation: 'horizontal'
        GridLayout:
            cols:2
            rows:1
            Label:
                text: 'Status Message'
                size_hint: None, None
                size: 200, 40
                color: 1, 0, 1, 1
            Button:
                background_color: 1, 1, 2, 1
                text: 'Update'
                color: (1, 0, 1, 1)
                size_hint: None, None
                size: 150, 40
